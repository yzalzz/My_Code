<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--映射文件，namespace命名空间：对应一个完全的全限定名，必须和对应的接口的路径相匹配-->
<mapper namespace="com.fc.dao.StudentDao">
    <!--开启二级缓存，作用于当前dao下的所有方法-->
    <cache/>
    <select id="findById" parameterType="Integer" resultType="com.fc.entity.com.fc.entity.Student">
        select * from student where id = #{id}
    </select>

    <update flushCache="true" id="update">
        update student set info = #{info} where id = #{id}
    </update>
</mapper>